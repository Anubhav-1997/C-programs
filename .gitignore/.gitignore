#include<stdio.h>
#include<math.h>
void decbin(int num)
{
	int arr[20];
	int i=0;
	while(num>0)
	{
		arr[i]=num%2;
		num=num/2;
		i++;
		
	}
	printf("\n Binary conversion of this decimal number is-:");
	for(int j=i-1;j>=0;j--)
	{
		printf("%d",arr[j]);
	}
	
}
void bindec(int num)
{
		int i=0,sum=0;
		while(num!=0)
		{
			sum+=((num%2)*pow(2,i));
			num=num/10;
			i++;
		}
	printf("\n Decimal conversion of this Binary number is-: %d",sum);
	
		
}

int main()
{
	int ch,numd,numb;
	printf("\n Enter 1. Decimal to Binary \n\t2. Binary to Decimal-:\n");
	scanf("%d",&ch);
	if(ch==1)
	{
	printf("\nEnter a decimal number-:\n");
	scanf("%d",&numd);
	decbin(numd);
	}
	if(ch==2)
	{
	printf("\nEnter a binary number:");
	scanf("%d",&numb);
	bindec(numb);
	}
	return 0;
}
